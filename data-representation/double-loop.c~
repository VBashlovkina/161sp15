#include <stdio.h>
/* Program to review a loop with doubles */

int main ()
{
  double inc = 1.0/10.0;
  double val = 1000.0;
  double end = 1001.0;
  double sum = 0.0;

  printf ("program to loop with doubles from %22.15lf to %22.15 increement %22.15lf\n",
          val, end, inc);

  while (val <= end)
    {
      /* add to sum and print */
      sum += val;
      printf ("val = %22.15lf;  sum = %22.15lf\n", val, sum);

      /* increment val for loop test and next iteration */
      val += inc;
    }

  printf ("loop terminated with val = %22.15lf;  sum = %22.15lf\n", val, sum);

}
